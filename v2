using namespace std;

int nFilas, nColumnas;

void pedirDatos(){

    cout<<"INTRODUCE TAMAÑO DEL TABLERO (x*x=par)"<<endl;
    cout<<"Filas = "; cin >> nFilas; cout << " Columnas = "; cin >> nColumnas;

    while( (nFilas*nColumnas)%2 != 0 ){
        cout<<"INTRODUCE TAMAÑO DEL TABLERO (x*x=par) = ";
        cout<<"Filas = "; cin >> nFilas; cout << " Columnas = "; cin >> nColumnas;
    }
}

