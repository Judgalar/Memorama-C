}

int main()
{
    srand(time(NULL));

    int num=0;
    int columna =1;
    int fila = 1;
    string celda ="   |";
    string salto ="----";

   
pedirDatos();

//Tablero inicial
    cout<<celda;
        for(int j=1; j<=nColumnas; j++){
            cout<<" "<<columna<<" |";
            columna++;
        }
        cout<<endl;
        for(int j=1;j<=nColumnas+1; j++){
            cout<<salto;
        }
        cout<<endl;
    for(int i=1; i<=nFilas; i++){
        cout<<" "<<fila<<" |";
        fila++;
        for(int j=1; j<nColumnas+1; j++){
            cout<<celda;
        }
        cout<<endl;
        for(int j=1;j<=nColumnas+1; j++){
            cout<<salto;
        }
        cout<<endl;
    }

    int matriz[nFilas][nColumnas];
    for(int i=0; i<nFilas; i++){
        for(int j=0; j<nColumnas; j=j+2){
            matriz[i][j]= num;
            matriz[i][j+1]= num;
            num++;
            
        }
    }

//comprobacion

for(int i=0; i<nFilas; i++){
        for(int j=0; j<nColumnas; j++){
            cout<<matriz[i][j];
            
        }
        cout<<endl;
    }



 // FIN DEL PROGRAMA
