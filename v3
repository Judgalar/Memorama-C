        cartas[i+1]=simbolo;
        simbolo++;
    }
    for(int i=0;i<(nFilas*nColumnas);i++){
        cout<<cartas[i];
    }

    

desordenar();
    for(int i=0;i<(nFilas*nColumnas);i++){
        cout<<cartas[i];
    }
    int k=0;
    int matrizCartas[nFilas][nColumnas];
    for(int i=0; i<nFilas; i++){
        for(int j=0; j<nColumnas; j=j++){
            matrizCartas[i][j] = cartas[k];
            k++;
        }
    }


//comprobacion

for(int i=0; i<nFilas; i++){
        for(int j=0; j<nColumnas; j++){
